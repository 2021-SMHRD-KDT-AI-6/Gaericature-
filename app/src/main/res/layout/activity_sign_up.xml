<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edSignUpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/edt1"
        android:ems="10"
        android:hint="@string/edId"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/edSignUpPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt1"
        android:ems="10"
        android:hint="@string/edPw"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/edSignUpId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edSignUpId"
        app:layout_constraintTop_toBottomOf="@+id/edSignUpId" />

    <EditText
        android:id="@+id/edSignUpNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt1"
        android:ems="10"
        android:hint="@string/edNick"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/edSignUpPw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edSignUpPw"
        app:layout_constraintTop_toBottomOf="@+id/edSignUpPw" />

    <ImageView
        android:id="@+id/imgSignUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/edSignUpNick"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/dog" />

    <Button
        android:id="@+id/btnSignUpBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:text="@string/btnBack"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUpComplete"
        app:layout_constraintStart_toStartOf="@+id/btnSignUpComplete"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUpComplete" />

    <Button
        android:id="@+id/btnSignUpComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:text="@string/btnSignUp"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/edSignUpNick"
        app:layout_constraintStart_toStartOf="@+id/imgSignUp"
        app:layout_constraintTop_toBottomOf="@+id/imgSignUp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="프로필 사진"
        app:layout_constraintEnd_toEndOf="@+id/edSignUpNick"
        app:layout_constraintStart_toStartOf="@+id/edSignUpNick"
        app:layout_constraintTop_toBottomOf="@+id/edSignUpNick" />

    <ImageView
        android:id="@+id/btnSignUpGallery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSignUp"
        app:layout_constraintEnd_toEndOf="@+id/edSignUpNick"
        app:layout_constraintStart_toEndOf="@+id/imgSignUp"
        app:layout_constraintTop_toTopOf="@+id/imgSignUp"
        app:srcCompat="@drawable/gallery1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="갤러리에서 찾기"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUpGallery"
        app:layout_constraintStart_toStartOf="@+id/btnSignUpGallery"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUpGallery" />

</androidx.constraintlayout.widget.ConstraintLayout>